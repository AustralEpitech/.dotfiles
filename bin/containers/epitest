#!/bin/bash -e

CRI=(podman)

IMG='docker.io/epitechcontent/epitest-docker'
TAG=latest

if ! "${CRI[@]}" container start epitest > /dev/null 2>&1; then
    "${CRI[@]}" run --rm -d --name epitest \
        -v "$HOME:$HOME"                   \
        "$IMG:$TAG" sleep infinity > /dev/null
fi

"${CRI[@]}" exec -it -w "$PWD" epitest "$@"
